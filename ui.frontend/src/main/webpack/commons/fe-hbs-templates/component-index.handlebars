<html lang="en-US">
  <head>
    <meta charset="UTF-8" />
    <title>Main Index</title>
    <meta name="template" content="page-content" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
  </head>
  <body class="page basicpage">
    <main class="responsivegrid">
      <div class="cmp-container">
        <div class="aem-Grid aem-Grid--12 aem-Grid--default--12">
          <div
            class="responsivegrid aem-GridColumn aem-GridColumn--default--12"
          >
            <div class="title aem-GridColumn aem-GridColumn--default--12">
              <div class="cmp-title">
                <h1 class="cmp-title__text">Component Index</h1>
              </div>
            </div>
            <hr />
            <div class="cmp-container">
              <div
                class="aem-Grid aem-Grid--12 aem-Grid--default--12 is-demo-page"
              >
                <h2>Component Demo Pages</h2>
                <div class="row">
                  <div class="col-md-2"><h3>Atom</h3></div>
                  <div class="col-md-2"><h3>Molecules</h3></div>
                  <div class="col-md-2"><h3>Organisms</h3></div>
                </div>
                <div class="row">
                  <div class="col-md-2">
                    <ul class="nav nav-pills nav-stacked">
                      {{#each components.atom as |pageDetails|}}
                        <li class="nav-item">
                          <a
                            href="{{pageDetails.path}}"
                            target="_blank"
                            class="nav-link"
                          >
                            {{pageDetails.name}}
                          </a>
                        </li>
                      {{/each}}
                    </ul>
                  </div>
                  <div class="col-md-2">
                    <ul class="nav nav-pills nav-stacked">
                      {{#each components.molecule as |pageDetails|}}
                        <li class="nav-item">
                          <a
                            href="{{pageDetails.path}}"
                            target="_blank"
                            class="nav-link"
                          >
                            {{pageDetails.name}}
                          </a>
                        </li>
                      {{/each}}
                    </ul>
                  </div>
                  <div class="col-md-2">
                    <ul class="nav nav-pills nav-stacked">
                      {{#each components.organism as |pageDetails|}}
                        <li class="nav-item">
                          <a
                            href="{{pageDetails.path}}"
                            target="_blank"
                            class="nav-link"
                          >
                            {{pageDetails.name}}
                          </a>
                        </li>
                      {{/each}}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
