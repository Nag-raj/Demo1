<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Checkout Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    trackingFeature="cif-core-components:checkoutpage:v1">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs"
            maximized="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
                <properties
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Properties"
                    sling:resourceType="granite/ui/components/coral/foundation/container"
                    margin="{Boolean}true">
                    <items jcr:primaryType="nt:unstructured">
                        <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            margin="{Boolean}true">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <disclaimerText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldDescription="Disclaimer message at checkout"
                                        fieldLabel="Disclaimer"
                                        name="./disclaimer"/>
                                    <termsofuseText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="terms of use text"
                                            fieldLabel="Terms of use"
                                            name="./termsofuse"/>
                                    <termsofusePath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                            rootPath="/content/olympus-customer-portal/"
                                            fieldDescription="Terms of use Path"
                                            fieldLabel="Terms of Use Path"
                                            name="./termsofuseurl"/>
                                    <checkoutPagePath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                            fieldDescription="Select the path for checkout page"
                                            fieldLabel="Checkout Page Path"
                                            name="./checkoutPagePath"
                                            rootPath="/content/olympus-customer-portal/"/>
                                    <shopPagePath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                            fieldDescription="Select the path for shop page"
                                            fieldLabel="Shop Page Path"
                                            name="./shopPagePath"
                                            rootPath="/content/olympus-customer-portal/"/>
                                </items>
                                </column>
                            </items>
                        </columns>
                    </items>
                </properties>
                <payByCreditCard
                jcr:primaryType="nt:unstructured"
                jcr:title="Pay By Credit Card"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <paymentMethodText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Payment Method Text"
                                        fieldLabel="Payment Method Text"
                                        name="./paymentMethodText"/>
                                    <paymentMethodDesc
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldDescription="Payment Method Description"
                                        fieldLabel="Payment Method Description"
                                        name="./paymentMethodDesc"/>
                                    <payWithCreditCard
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Pay With Credit Card Text"
                                        fieldLabel="Pay With Credit Card Text"
                                        name="./payWithCreditCard"/>
                                    <payViaInvoice
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Pay via Invoice"
                                        fieldLabel="Pay via Invoice"
                                        name="./payViaInvoice"/>
                                </items>
                            </column>
                        </items>
                    </columns>
                </items>
                </payByCreditCard>
            </items>
        </tabs>
        </items>
    </content>
</jcr:root>
