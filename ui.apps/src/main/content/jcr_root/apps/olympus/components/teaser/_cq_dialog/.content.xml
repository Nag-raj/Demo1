<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Olympus Teaser">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[image]">
                    <actions jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[linksNote,link]"/>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </actions>
                    <text jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[pretitle]">
                                            <titleGroup
                                                jcr:primaryType="nt:unstructured"
                                                sling:hideProperties="granite:hide">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideChildren="[titleType,titleFromLinkedPage]"/>
                                            </titleGroup>
                                            <descriptionGroup jcr:primaryType="nt:unstructured">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideChildren="[descriptionFromLinkedPage]"/>
                                            </descriptionGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text>
                    <styletab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_edit/styletab"/>
                    <asset
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Asset"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <pageImageThumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="core/wcm/components/commons/editor/dialog/pageimagethumbnail/v1/pageimagethumbnail"/>
                                            <image
                                                jcr:primaryType="nt:unstructured"
                                                path="core/wcm/components/image/v3/image/cq:dialog/content/items/tabs/items/asset"
                                                sling:resourceType="granite/ui/components/coral/foundation/include"/>
                                            <icon
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                class="cq-droptarget"
                                                allowUpload="{Boolean}false"
                                                fieldLabel="Icon"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./icon"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                name="./file"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </asset>
                    <linksConfiguration
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Links Box Configuration"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
											<linksBox
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    text="Vertical Links Box"
                                                    fieldDescription="Select the checkbox to create vertical links box."
													uncheckedValue="false"
													value="true"
                                                    name="./linksBox"/>
											<linksBoxText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Vertical Links Box Title"
                                                    fieldDescription="Enter the text to be visible on the vertical links box."
                                                    name="./linksBoxText"/>
                                            <multi
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    fieldLabel="Text tile Configuration">
                                                <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        name="./textTileMulti">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <tileText
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Text"
                                                            fieldDescription="Enter the text to be visible on the text tiles."
                                                            name="./tileText"/>
                                                        <linkPath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                            fieldLabel="Link Path"
                                                            rootPath="/content/olympus-customer-portal/"
                                                            fieldDescription="Select the path for redirection"
                                                            name="./linkPath"/>
                                                        <iconPath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldLabel="Icon"
                                                            rootPath="/content/dam"
                                                            fieldDescription="Select the path of the icon"
                                                            name="./iconPath"/>
                                                    </items>
                                                </field>
                                            </multi>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </linksConfiguration>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
