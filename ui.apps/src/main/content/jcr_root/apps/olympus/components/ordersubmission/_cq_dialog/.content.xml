<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Order Submission"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <orderSubmission
                jcr:primaryType="nt:unstructured"
                jcr:title="Order Submission"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <orderConfirmationTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Order Confirmation"
                                        fieldLabel="Order Confirmation Title"
                                        name="./orderConfirmationTitle"/>
                                    <orderConfirmationDescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Order Confirmation Description Text"
                                        fieldLabel="Order Confirmation Description Text"
                                        name="./orderConfirmDescription"/>
                                    <shippingAddress
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldDescription="Shipping Address Text"
                                        fieldLabel="Shipping Address "
                                        name="./shippingAddress"/>
                                    <paymentMethod
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldDescription="Payment Method Description"
                                        fieldLabel="Payment Method"
                                        name="./paymentMethod"/>
                                    <datePlaced
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Date the Order got Placed"
                                            fieldLabel="Date Placed"
                                            name="./datePlaced"/>
                                    <orderNumber
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The Order Number"
                                            fieldLabel="Order Number"
                                            name="./orderNumber"/>
                                    <poNumber
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The PO Number"
                                            fieldLabel="PO Number"
                                            name="./poNumber"/>
                                    <totalPrice
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Total Price"
                                            fieldLabel="Total Price"
                                            name="./totalPrice"/>
                                    <orderStatusLabel
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Order Status Label"
                                            fieldLabel="Order Status Label"
                                            name="./orderStatusLabel"/>
                                    <modelNumber
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The Model Number "
                                            fieldLabel="Model Number Title"
                                            name="./modelNumber"/>
                                    <product
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Product"
                                            fieldLabel="Product Title"
                                            name="./product"/>
                                    <description
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Products Description Title"
                                            fieldLabel="Description Title"
                                            name="./description"/>
                                    <quantity
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Products Quantity Title"
                                            fieldLabel="Quantity Title"
                                            name="./quantity"/>



                                </items>
                            </column>
                        </items>
                    </columns>
                </items>
            </orderSubmission>
        </items>
    </content>
</jcr:root>
